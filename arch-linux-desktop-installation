	    origin = "bottom-right"
	    offset = 10x36
	    progress_bar = false
	    padding = 10
	    horizontal_padding = 10
	    frame_width = 1
	    font = "Source Code Pro 10"
	    line_height = 3
	    format = "<b>%s</b>\n%b"
	    word_wrap = true
	    show_indicators = false

	[urgency_low]
	    background = "${COLORS["Gray B"]}"
	    foreground = "${COLORS["White"]}"
	    frame_color = "${COLORS["Gray C"]}"
	    timeout = 3

	[urgency_normal]
	    background = "${COLORS["Gray B"]}"
	    foreground = "${COLORS["White"]}"
	    frame_color = "${COLORS["Gray C"]}"
	    timeout = 10

	[urgency_critical]
	    background = "${COLORS["Gray B"]}"
